{
    "compilerOptions": {
        "noImplicitAny": true,
        "target": "es2017",
        "lib": ["es2020", "dom", "WebWorker"],
        "sourceMap": true,
        "inlineSources": true,
        "module": "es2020",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "playcanvas": ["node_modules/playcanvas/build/playcanvas"],
            "pcui": ["node_modules/@playcanvas/pcui"]
        }
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "**/*.js", "dist"]
}
